<div class="bg-primary">
  <div class= "container d-flex align-items-center">
    <%= link_to categories_path, class: 'd-flex text-decoration-none text-white' do %>
      <i class="fa fa-arrow-left fs-3 " aria-hidden="true"></i>
    <% end %>
    <h1 class= "container d-flex justify-content-center text-white">DETAILS</h1>
  </div>
</div>
<div class="container mt-3 border-bottom border-bottom">
  <div id="img-div" class="col d-flex gap-2">
    <img src=<%= @category.icon%> alt=<%= @category.name%> />
    <p><%= @category.name %></p>
  </div>
  <div>
    <div id="payments" >
      <% @payments.each do |payment| %>
      <%= link_to "/categories/#{@category.id}/payments/#{payment.id}", class: "text-decoration-none" do %>
      <div class="container border border-primary mt-3">
        <div><p>Transaction <%= payment.name %></p></div>
        <div class="d-flex align-items-baseline gap-2 ">
        <i class="fa fa-calendar" aria-hidden="true"></i>
        <p><%= payment.created_at.to_date.strftime('%Y %b %d') %> at <%= payment.created_at.to_time.strftime('%H:%M:%S') %></p>
        </div>
       </div>
      <% end %>
  <% end %>
</div>
  </div>
  <div class="d-flex justify-content-between">
    <p>TOTAL PAYMENT</p>
    <p>$<%= @category.count_total_payments %></p>
  </div>
  <div class="mt-3 d-flex justify-content-center">
    <%= link_to "New transaction", new_payment_path, class: "btn btn-primary" %>
  </div>
</div>
